<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>


<div class="container truck-list">
  <h4>Truck-it list</h4>

  <% @trucks.each do |truck| %>
    <%= render 'shared/card' %>
    <% if policy(truck).edit? %>
      <%= link_to "Update", edit_truck_path(truck) %>
    <% end %>
  <% end %>

</div>

<% if policy(Truck).create? %>
  <%= link_to "New truck", new_truck_path %>
<% end %>
