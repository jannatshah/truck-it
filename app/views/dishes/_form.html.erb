<!-- _form.html.erb -->
<%= simple_form_for [@truck, @dish] do |f| %>

  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.button :submit, :class => "btn-primary text-center"  %>

<% end %>
