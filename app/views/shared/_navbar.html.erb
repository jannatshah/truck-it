
<div class="dropdown show d-flex justify-content-between align-items-center px-3">
  <a class="avatar dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <%= image_tag "truck_icon.png", class: "avatar dropdown-toggle text-dark"%>
  </a>

  <%= link_to root_path, class: 'truck-it' do %>
    <span><strong>TRUCK-iT</strong></span>
  <% end %>

  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "dropdown-item" %>
      </li>
      <li class="nav-item">
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Start your business here', new_truck_path, class: 'dropdown-item' %>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "dropdown-item" %>
      </li>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
      </li>
    <% end %>
  </div>
</div>
