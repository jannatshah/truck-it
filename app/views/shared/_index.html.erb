<div
  id="map"
  style="width: 100%;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>


<div class="truck-list">
  <h4 class="mx-3">Swipe up</h4>

<!-- filter buttons -->
  <div class="filter-box">

<% Truck::CATEGORIES.each do |category| %>
  <%= link_to send("#{category.gsub(' ', '_')}_trucks_path") do %>
    <div class="category-img" style="background-image: url('<%= cl_image_path("#{category.gsub(' ', '%20')}.jpg", :width => 100, :height => 100, :crop=>"fill") %>')">
      <p class="text-center m-0"><%= category %></p>
    </div>
      <!-- = cl_image_tag("burger.jpg", :width => 100, :height => 100, :crop=>"fill") %> -->
    <% end %>
  <% end %>
</div>

<!--  -->
  <div class="open-now p-3">
    <h5 class='list-title'>serving right now</h5>
    <% @trucks.each do |truck| %>
      <% if truck.open? %>
        <%= link_to truck_path(truck) do %>
          <%= render 'shared/card', truck: truck %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="closed-now p-3">
    <h5 class='list-title'>opening soon</h5>
    <% @trucks.each do |truck| %>
      <% if truck.open? != true %>
        <%= link_to truck_path(truck) do %>
          <%= render 'shared/card', truck: truck %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
<%= render 'shared/footer' %>

