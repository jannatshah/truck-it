<!-- app/views/orders/show.html.erb -->
<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%#= image_tag @order.teddy.photo_url, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>MEAL</strong></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p>Your order will be ready to collect from the truck in <strong>10-15 minutes</strong></p>
    </div>
  </div>
</div>
